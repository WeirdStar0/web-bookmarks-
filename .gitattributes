# Auto detect text files and perform LF normalization
* text=auto

# Force LF for specific files
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.sql text eol=lf
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
